.p {
  font-size:25rpx;
}
.h3 {
  font-size:35rpx;
}
.h2 {
  font-size:45rpx;
}
.search-button {
  opacity:0.5;
}
.avatar {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  object-fit:cover;
}

.banner-wrapper {
  display: flex;
  justify-content: center;
  position: relative;
  width: 100vw;
  height: 480rpx;
}

.banner {
  position: absolute;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.74) 42.08%, #FFFFFF 92.71%);
  background-size: cover;
  background-position: center;
  width: 100vw;
}

.white {
  position: absolute;
  background-color: white;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.74) 40.08%, #FFFFFF 90.71%);
  z-index: 10;
  width: 100%;
  height: 100%;  
}
.divider {
  height:60rpx;
  background-color: white;
}

.card-product {
  height:303rpx;
  width: 252rpx;
  background:rgb(250, 250, 250);
  box-shadow: 2rpx 2rpx 5rpx rgba(0,0,0,0.1);
  justify-content: center;
  padding: 16px;
  margin: 8px;
  border-radius: 4px;
}
.card-product-1 {
  height:303rpx;
  width: 252rpx;
  display: flex;
  justify-content: flex-end;
  padding: 16px;
  margin: 8px;
  border-radius: 4px;
}
.row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.section {
  margin-top: 100rpx;
  z-index: 11;
}

.searchbar {
  display: flex;
  align-items:center;
  margin: 0 auto;
  background-color: white;
  border-radius: 8rpx;
  box-shadow: 2px 2px 3px rgba(0,0,0,0.2);
  width: 600rpx;
  padding-left: 40rpx;
  height: 50rpx;
}

.btn {
  background-color: none;
  margin-top: 30rpx;
  color: white;
}