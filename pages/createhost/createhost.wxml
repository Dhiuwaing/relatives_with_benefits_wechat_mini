
<view class="form">
<form bindsubmit="formSubmit" bindreset="formReset">
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      Select your role：{{array[index]}}
    </view>
  </picker>

<input name="name" placeholder="Type in your name..." />

<input name="description" placeholder="Describe yourself.." />

<view class="picker-section">
<picker bindchange="bindPickerChange2" value="{{index2}}" range="{{array2}}">
    <view class="picker">
      Select your location：{{array2[index2]}}
    </view>
  </picker>
</view>

 <checkbox-group name="gender">
      <label><checkbox value="female"/>Female</label>
      <label><checkbox value="male"/>Male</label>
    </checkbox-group>

<view class="section section_gap">
  <text class="section__title"> Set your age </text>
  <view class="body-view">
    <slider bindchange="slider4change" min="18" max="80" name="age" show-value/>
  </view>
</view>

<input name="url" placeholder="Type in your url..." />

<input name="image_url" placeholder="Type in your image url..." />

<view class="btn-area">
<button type="primary" form-type="submit">Submit</button>
<button form-type="reset">Reset</button>
</view>
</form>
</view>
