
<view class="form">
<form bindsubmit="formSubmit" bindreset="formReset">
  <picker bindchange="bindPickerChange" value="{{array}}" range="{{array}}">
    <view class="picker">
      Select your role：{{array[key]}}
    </view>
  </picker>
<view class="picker-section">
<input name="name" placeholder="Type in your name..." />
</view>
<view class="picker-section">
<input name="description" placeholder="Describe yourself.." />
</view>
<view class="picker-section">
<picker bindchange="bindPickerChange2" value="{{array2}}" range="{{array2}}">
    <view class="picker">
      Select your location：{{array2[key]}}
    </view>
  </picker>
</view>
<view class="picker-section">
<input name="category" placeholder="Type in your category..." />
</view>

<view class="picker-section">
 <checkbox-group name="checkbox">
      <label><checkbox value="checkbox1"/>Female</label>
      <label><checkbox value="checkbox2"/>Male</label>
    </checkbox-group>
</view>
<view class="picker-section">
<view class="section section_gap">
  <text class="section__title"> Set your age </text>
  <view class="body-view">
    <slider bindchange="slider4change" min="18" max="80" show-value/>
  </view>
</view>
</view>
<view class="picker-section">
<input name="url" placeholder="Type in your url..." />
</view>
<view class="picker-section">
<input name="image_url" placeholder="Type in your image url..." />
</view>
<view class="btn-area">
<button type="primary" form-type="submit">Submit</button>
<button form-type="reset">Reset</button>
</view>
</form>
</view>
